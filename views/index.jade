extends layout

block top
	.navbar
		.navbar-inner
			#user-id.brand

block left-column
	#serialtalk.well
		h5 Communicate over serial
		//form.form-inline
		.input-append
			input#serialtalk-text(type="text", placeholder="LLAP message")
			button#serialtalk-btn.btn Send
		p Last response:&nbsp;
			span#serialtalk-resp nothing yet

block main-column
	#devices
		h3.well.text-center TM / temperature sensor
			br
			button.btn.btn-primary.btn-large.disabled#TMtemp Temp: No value yet
			button.btn.btn-info.btn-large.disabled#TMbatt Batt: No value yet


block right-column
	#logs.well
		h5 Latest Logs
			button.btn.btn-small#refresh-logs-btn Refresh
		div#logs-content

block footer
	p	<strong>Server info:</strong>&nbsp;
		| #{process.title}:[#{process.version}]
		| serial-port:[
		span#serial-port-elt
		|]


block scripts
	script(src='/js/index.js')
	script(src="/socket.io/socket.io.js")
	script(src='/js/socket_client.js')
